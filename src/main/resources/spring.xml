<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
   
	<context:component-scan base-package="com.cm"></context:component-scan>
	<!--
	when we call getBean() using ClasspathXMLcontext object passing "vehicle" as an argument,
	spring will look for bean with id "vehicle" in this xml file(the name of which we use to create the said context object)
	
	
	<bean id="vehicle" class="com.cm.Bike" ></bean>
	-->
	
	<bean id="tyre" class="com.cm.Tyre">
		<!--
		when the spring has created the tyre object, it calls the setter of the meber var named brand.
		<property name="brand" value="MRF"></property>-->
		<property name="brand" value="MRF"></property>

				
		<!-- 
		while creating the objects, contructor-arg element's value attr is set to member variables by spring.
		this is set first. then setter is called. So, variable will have MRF(the value in the property in the previous line -->
		<constructor-arg value="Apollo"></constructor-arg> 
	</bean>
	
</beans>